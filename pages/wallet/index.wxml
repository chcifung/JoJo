<!--pages/wallet/index.wxml-->
<view class="container">
  <view class="overage">
    <view>
      <text class="overage-header">我的余额（元）</text>
    </view>
    <view>
      <text class="overage-amount">{{overage}}</text>
    </view>
    <view>
      <text bindtap="overageDesc" class="overage-desc">余额说明</text>
    </view>
  </view>
  <button bindtap="movetoCharge" class="btn-charge">充值</button>
  <view class="my-ticket tapbar" bindtap="showTicket">
    <text>我的优惠券</text>
    <text class="c-g">{{ticket}}张</text>
  </view>
  <view class="my-deposit tapbar" bindtap="showDeposit">
    <text>我的押金</text>
    <text class="c-y">30元，押金退款</text>
  </view>
  <view class="my-invcode tapbar" bindtap="showInvcode">
    <text>关于JoJo伞</text>
    <text></text>
  </view>
</view>
